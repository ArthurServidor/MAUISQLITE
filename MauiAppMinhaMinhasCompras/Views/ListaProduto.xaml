<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhaMinhasCompras.Views.ListaProduto">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Somar" Clicked="ToolbarItem_Clicked"/>
        <ToolbarItem Text="Adicionar" Clicked="ToolbarItem_Clicked1"/>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Label">
                <Setter Property="VerticalTextAlignment" Value="Center"/>
            </Style>
            <Style x:Key="cabecalho_listview" TargetType="Grid">
                <Setter Property="BackgroundColor"
                        Value="{AppThemeBinding Light={StaticResource Gray100}, 
                        Dark={StaticResource Primary}}"/>
            </Style>
        </ResourceDictionary>
        
        <StackLayout>
            <SearchBar x:Name=""></SearchBar>
        </StackLayout>
    </ContentPage.Resources>
</ContentPage>